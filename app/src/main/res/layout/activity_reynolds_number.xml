<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ReynoldsNumber">

    <ScrollView
        android:id="@+id/reynolds_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Aim:"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reynolds_aimPara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Theory:"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reynolds_theoryPara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

            <com.example.virtualfluidlab.view.MathJaxWebView
                android:id="@+id/reynolds_theory_formula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/reynolds_theoryPara2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center_horizontal"
                android:text="@string/laminar_flow"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/reynolds_intro_laminar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center_horizontal"
                android:text="@string/transition_flow"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/reynolds_intro_transition" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center_horizontal"
                android:text="@string/turbulent_flow"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/reynolds_intro_turbulent" />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/reynolds_aboutSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp">

            <TextView
                android:id="@+id/reynolds_aboutSetupPara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:src="@drawable/reynolds_labelled" />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/reynolds_procedure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Laboratory Procedure:"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/reynolds_procedurePara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Simulation Procedure:"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/reynolds_procedurePara2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reynolds_simulation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/reynolds_narrowTube"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_115sdp"
            android:layout_marginTop="@dimen/_129sdp"
            android:layout_marginBottom="70dp"
            android:progress="0"
            android:progressDrawable="@drawable/blueprogress"
            app:layout_constraintStart_toStartOf="@id/reynolds_apparatus"
            app:layout_constraintTop_toTopOf="@id/reynolds_apparatus" />

        <ProgressBar
            android:id="@+id/reynolds_exitTap"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_139sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginBottom="70dp"
            android:progress="0"
            android:progressDrawable="@drawable/vertical_progressbar"
            android:rotation="180"
            app:layout_constraintEnd_toEndOf="@id/reynolds_apparatus"
            app:layout_constraintTop_toTopOf="@id/reynolds_apparatus" />

        <ImageView
            android:id="@+id/reynolds_apparatus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_330sdp"
            android:src="@drawable/reynolds_apparatus"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:onClick="powerOnOff"
            app:layout_constraintBottom_toBottomOf="@id/reynolds_apparatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/reynolds_apparatus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zoomed view of glass tube"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/reynolds_tube_zoomView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/reynolds_tube_zoomView" />

        <ImageView
            android:id="@+id/reynolds_tube_zoomView"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_47sdp"
            android:layout_marginTop="15dp"
            android:src="@drawable/reynolds_tube_zoomview"
            app:layout_constraintLeft_toLeftOf="@id/reynolds_apparatus"
            app:layout_constraintRight_toRightOf="@id/reynolds_apparatus"
            app:layout_constraintTop_toBottomOf="@id/reynolds_apparatus" />

        <ImageView
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_29sdp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/reynolds_tube_zoomView"
            app:layout_constraintLeft_toLeftOf="@id/reynolds_tube_zoomView"
            app:layout_constraintTop_toTopOf="@id/reynolds_tube_zoomView" />

        <ImageView
            android:id="@+id/reynolds_water_to_dye"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_29sdp"
            android:layout_marginStart="320dp"
            android:src="@drawable/water_to_dye"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/reynolds_tube_zoomView"
            app:layout_constraintLeft_toLeftOf="@id/reynolds_tube_zoomView"
            app:layout_constraintTop_toTopOf="@id/reynolds_tube_zoomView" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:background="#fff"
            app:layout_constraintBottom_toBottomOf="@id/reynolds_tube_zoomView"
            app:layout_constraintLeft_toRightOf="@id/reynolds_tube_zoomView"
            app:layout_constraintTop_toTopOf="@id/reynolds_tube_zoomView" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/reynolds_flow_animation"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_47sdp"
            app:layout_constraintBottom_toBottomOf="@id/reynolds_tube_zoomView"
            app:layout_constraintLeft_toLeftOf="@id/reynolds_tube_zoomView"
            app:layout_constraintTop_toTopOf="@id/reynolds_tube_zoomView"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/reynolds_dye_path" />


        <android.widget.VerticalSeekBar
            android:id="@+id/reynolds_flowRate_seekBar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="45dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/reynolds_apparatus" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintBottom_toTopOf="@id/reynolds_saveButton"
            app:layout_constraintTop_toBottomOf="@id/reynolds_tube_zoomView">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="center"
                    android:text="R1(ml)"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="center"
                    android:text="R2(ml)"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="center"
                    android:text="Time(s)"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/reynolds_simR1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/reynolds_simR2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/reynolds_simTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp" />


            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/reynolds_deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/nunito_semibold"
            android:onClick="saveDelData"
            android:tag="0"
            android:text="Delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/reynolds_saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/nunito_semibold"
            android:onClick="saveDelData"
            android:tag="1"
            android:text="Save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/reynolds_obsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="0 of 10"
            android:textColor="#909090"
            app:layout_constraintBottom_toBottomOf="@id/reynolds_saveButton"
            app:layout_constraintLeft_toRightOf="@id/reynolds_deleteButton"
            app:layout_constraintRight_toLeftOf="@id/reynolds_saveButton"
            app:layout_constraintTop_toTopOf="@id/reynolds_saveButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reynolds_observation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/reynolds_obsNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_semibold"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text=""
            android:textSize="17sp"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/reynolds_obsNote">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/cop_observationTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:layout_weight="0.2"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="center_horizontal"
                            android:text="Sn."
                            android:textSize="20sp" />

                        <TextView
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="center_horizontal"
                            android:text="R1 (ml)"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="center_horizontal"
                            android:text="R2 (ml)"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_bold"
                            android:gravity="center_horizontal"
                            android:text="Time (s)"
                            android:textSize="20sp" />

                    </TableRow>

                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:onClick="exportAsExcel"
                    android:text="Export observation table"
                    android:textColor="#2cc0f4"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/nunito_bold"
            android:onClick="resetObsTable"
            android:text="Reset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>