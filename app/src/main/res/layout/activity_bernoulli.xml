<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bernoulli">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/simulation"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/waterTubes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="55dp"
            app:layout_constraintEnd_toEndOf="@+id/experimentSetup"
            app:layout_constraintStart_toStartOf="@+id/experimentSetup"
            app:layout_constraintTop_toTopOf="@+id/experimentSetup">

            <ProgressBar
                android:id="@+id/tube1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="7dp"
                android:layout_height="115dp"
                android:layout_marginRight="1dp"
                android:progress="0"
                android:progressDrawable="@drawable/vertical_progressbar" />

            <ProgressBar
                android:id="@+id/tube2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="5dp"
                android:layout_height="115dp"
                android:layout_marginRight="3dp"
                android:progress="0"
                android:progressDrawable="@drawable/vertical_progressbar" />

            <ProgressBar
                android:id="@+id/tube3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="5dp"
                android:layout_height="115dp"
                android:layout_marginRight="4dp"
                android:progress="0"
                android:progressDrawable="@drawable/vertical_progressbar" />

            <ProgressBar
                android:id="@+id/tube4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="5dp"
                android:layout_height="115dp"
                android:layout_marginRight="3dp"
                android:progress="0"
                android:progressDrawable="@drawable/vertical_progressbar" />

            <ProgressBar
                android:id="@+id/tube5"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="5dp"
                android:layout_height="115dp"
                android:layout_marginRight="3dp"
                android:progress="0"
                android:progressDrawable="@drawable/vertical_progressbar" />

            <ProgressBar
                android:id="@+id/tube6"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="5dp"
                android:layout_height="115dp"
                android:layout_marginRight="3dp"
                android:progress="0"
                android:progressDrawable="@drawable/vertical_progressbar" />

            <ProgressBar
                android:id="@+id/tube7"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="5dp"
                android:layout_height="115dp"
                android:progress="0"
                android:progressDrawable="@drawable/vertical_progressbar" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/crossSection"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_below="@id/waterTubes"
            android:layout_centerHorizontal="true"
            android:progress="100"
            android:progressDrawable="@drawable/blueprogress"
            app:layout_constraintEnd_toEndOf="@+id/experimentSetup"
            app:layout_constraintStart_toStartOf="@+id/experimentSetup"
            app:layout_constraintTop_toBottomOf="@+id/waterTubes" />

        <ImageView
            android:id="@+id/experimentSetup"
            android:layout_width="wrap_content"
            android:layout_height="528dp"
            android:layout_centerHorizontal="true"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/bernoullisetup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/flowRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/experimentSetup"
            app:layout_constraintTop_toBottomOf="@+id/experimentSetup" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/introduction"
            android:orientation="vertical"
            android:visibility="visible"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:id="@+id/heading1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="normal"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="20sp"
                android:justificationMode="inter_word"
                android:id="@+id/para1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:id="@+id/heading2"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/labelledDiagram"
                android:src="@drawable/bernoulli_labelled"
                android:paddingBottom="25dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="normal"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="20sp"
                android:justificationMode="inter_word"
                android:id="@+id/para2"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/bernoulliEquation"
                android:src="@drawable/bernoulli_equation"
                android:paddingBottom="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="normal"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="20sp"
                android:justificationMode="inter_word"
                android:paddingBottom="20dp"
                android:id="@+id/para3"
                />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>