<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListView"
    android:background="@drawable/bubbleback">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/appuicrop"
        android:alpha="0"
        />

    <ImageView
        android:layout_width="290sp"
        android:layout_height="290sp"
        android:src="@drawable/box"
        android:translationX="-280sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:id="@+id/vNotch"
        android:alpha="1"
        />

    <ImageView
        android:layout_width="290sp"
        android:layout_height="290sp"
        android:src="@drawable/box"
        android:translationX="280sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:id="@+id/metaCenter"
        android:alpha="1"
        />

    <ImageView
        android:layout_width="290sp"
        android:layout_height="290sp"
        android:src="@drawable/bernoullibox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:id="@+id/bernoullifloat"
        android:alpha="1"
        />

    <ImageView
        android:id="@+id/drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:src="@drawable/lowerbox"
        android:translationY="310dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduction"
        android:textSize="30sp"
        android:layout_below="@id/bernoullifloat"
        android:layout_marginTop="65sp"
        android:layout_marginLeft="30sp"
        android:id="@+id/introduction"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Setup"
        android:textSize="30sp"
        android:layout_below="@id/introduction"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="30sp"
        android:id="@+id/aboutSetup"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procedure"
        android:textSize="30sp"
        android:layout_below="@id/aboutSetup"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="30sp"
        android:id="@+id/procedure"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulation"
        android:textSize="30sp"
        android:layout_below="@id/procedure"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="30sp"
        android:id="@+id/simulation"
        android:onClick="switchToBernoulli"
        />


</RelativeLayout>