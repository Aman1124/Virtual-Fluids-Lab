<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MCQs"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2080dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/bkgrnd"
        android:background="@drawable/rounded_rectangle_1"
        android:layout_marginTop="55dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/option1"
        android:contentDescription="@string/bkgrnd"
        android:background="@drawable/rounded_rectangle_2"
        android:layout_marginBottom="370dp"
        android:layout_marginTop="-500dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="45dp"
        android:paddingBottom="25dp"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        android:textAlignment="center"
        android:background="@drawable/rounded_rectangle_1_grad"
        android:id="@+id/questionBox"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/questionBox"
        app:layout_constraintStart_toStartOf="@+id/questionBox"
        app:layout_constraintTop_toBottomOf="@+id/questionBox"
        android:layout_marginTop="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded_rectangle_stroke"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp"
        android:id="@+id/option1"
        android:onClick="changeColor"
        android:tag="1"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@id/option1"
        app:layout_constraintBottom_toBottomOf="@id/option1"
        app:layout_constraintRight_toRightOf="@id/option1"
        android:contentDescription="@string/bkgrnd"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_stroke"
        android:id="@+id/circle1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/questionBox"
        app:layout_constraintStart_toStartOf="@+id/questionBox"
        app:layout_constraintTop_toBottomOf="@+id/option1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded_rectangle_stroke"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp"
        android:id="@+id/option2"
        android:onClick="changeColor"
        android:tag="2"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@id/option2"
        app:layout_constraintBottom_toBottomOf="@id/option2"
        app:layout_constraintRight_toRightOf="@id/option2"
        android:contentDescription="@string/bkgrnd"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_stroke"
        android:id="@+id/circle2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/questionBox"
        app:layout_constraintStart_toStartOf="@+id/questionBox"
        app:layout_constraintTop_toBottomOf="@+id/option2"
        android:layout_marginTop="15dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded_rectangle_stroke"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp"
        android:id="@+id/option3"
        android:onClick="changeColor"
        android:tag="3"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@id/option3"
        app:layout_constraintBottom_toBottomOf="@id/option3"
        app:layout_constraintRight_toRightOf="@id/option3"
        android:contentDescription="@string/bkgrnd"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_stroke"
        android:id="@+id/circle3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/questionBox"
        app:layout_constraintStart_toStartOf="@+id/questionBox"
        app:layout_constraintTop_toBottomOf="@+id/option3"
        android:layout_marginTop="15dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/rounded_rectangle_stroke"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp"
        android:id="@+id/option4"
        android:onClick="changeColor"
        android:tag="4"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@id/option4"
        app:layout_constraintBottom_toBottomOf="@id/option4"
        app:layout_constraintRight_toRightOf="@id/option4"
        android:contentDescription="@string/bkgrnd"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_stroke"
        android:id="@+id/circle4"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="40dp"
        app:lottie_rawRes="@raw/next"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:onClick="replayAnimation"
        android:id="@+id/nextButton"
        android:tag="1"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        app:lottie_rawRes="@raw/prev"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:onClick="replayAnimation"
        android:id="@+id/prevButton"
        android:tag="0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>