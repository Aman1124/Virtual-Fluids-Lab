<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MCQs"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="2080dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/rounded_rectangle_1"
        android:contentDescription="@string/bkgrnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="-500dp"
        android:layout_marginBottom="370dp"
        android:background="@drawable/rounded_rectangle_2"
        android:contentDescription="@string/bkgrnd"
        app:layout_constraintBottom_toTopOf="@id/option1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/questionBox"
        app:layout_constraintEnd_toEndOf="@+id/questionBox"
        app:layout_constraintStart_toStartOf="@+id/questionBox"
        app:layout_constraintTop_toTopOf="@+id/questionBox" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="45dp"
        android:paddingBottom="25dp"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        android:textAlignment="center"
        android:background="@drawable/rounded_rectangle_1_grad"
        android:id="@+id/questionBox"/>

    <ProgressBar
        android:id="@+id/timerProgress"
        android:layout_width="55dp"
        android:layout_height="55dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_bar_ring"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"/>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@id/imageView3"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/questionBox"
        app:layout_constraintStart_toStartOf="@+id/questionBox"
        app:layout_constraintTop_toBottomOf="@+id/questionBox"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_rectangle_stroke"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="50dp"
        android:textSize="20sp"
        android:id="@+id/option1"
        android:onClick="changeColor"
        android:tag="1"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@id/option1"
        app:layout_constraintBottom_toBottomOf="@id/option1"
        app:layout_constraintRight_toRightOf="@id/option1"
        android:contentDescription="@string/bkgrnd"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_stroke"
        android:id="@+id/circle1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/questionBox"
        app:layout_constraintStart_toStartOf="@+id/questionBox"
        app:layout_constraintTop_toBottomOf="@+id/option1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_rectangle_stroke"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="50dp"
        android:textSize="20sp"
        android:id="@+id/option2"
        android:onClick="changeColor"
        android:tag="2"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@id/option2"
        app:layout_constraintBottom_toBottomOf="@id/option2"
        app:layout_constraintRight_toRightOf="@id/option2"
        android:contentDescription="@string/bkgrnd"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_stroke"
        android:id="@+id/circle2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/questionBox"
        app:layout_constraintStart_toStartOf="@+id/questionBox"
        app:layout_constraintTop_toBottomOf="@+id/option2"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_rectangle_stroke"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="50dp"
        android:textSize="20sp"
        android:id="@+id/option3"
        android:onClick="changeColor"
        android:tag="3"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@id/option3"
        app:layout_constraintBottom_toBottomOf="@id/option3"
        app:layout_constraintRight_toRightOf="@id/option3"
        android:contentDescription="@string/bkgrnd"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_stroke"
        android:id="@+id/circle3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/questionBox"
        app:layout_constraintStart_toStartOf="@+id/questionBox"
        app:layout_constraintTop_toBottomOf="@+id/option3"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_rectangle_stroke"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="50dp"
        android:textSize="20sp"
        android:id="@+id/option4"
        android:onClick="changeColor"
        android:tag="4"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@id/option4"
        app:layout_constraintBottom_toBottomOf="@id/option4"
        app:layout_constraintRight_toRightOf="@id/option4"
        android:contentDescription="@string/bkgrnd"
        android:layout_marginEnd="15dp"
        android:background="@drawable/circle_stroke"
        android:id="@+id/circle4"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        app:lottie_rawRes="@raw/next"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:onClick="changeQuestion"
        android:id="@+id/nextButton"
        android:tag="1"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        app:lottie_rawRes="@raw/prev"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:onClick="changeQuestion"
        android:id="@+id/prevButton"
        android:tag="-1"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#16ebfe"
        android:id="@+id/resultScreen"
        android:visibility="invisible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_500sdp"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_310sdp"
            android:background="@drawable/rounded_rectangle_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/backRect"/>

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:background="@drawable/circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/detailsRect"
            android:alpha="0.4"/>

        <ImageView
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:background="@drawable/circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/detailsRect"
            android:alpha="0.4"/>
        
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/detailsRect"
            android:id="@+id/scoreCircle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/scoreCircle"
            app:layout_constraintBottom_toBottomOf="@id/scoreCircle"
            app:layout_constraintRight_toRightOf="@id/scoreCircle"
            app:layout_constraintLeft_toLeftOf="@id/scoreCircle"
            android:layout_marginBottom="50dp"
            android:text="Your Score"
            android:textSize="20sp"
            android:id="@+id/yourScore"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/yourScore"
            app:layout_constraintRight_toRightOf="@id/scoreCircle"
            app:layout_constraintLeft_toLeftOf="@id/scoreCircle"
            android:layout_marginEnd="22dp"
            android:text="150"
            android:textSize="40sp"
            android:id="@+id/scoreText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pt"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/scoreText"
            app:layout_constraintBottom_toBottomOf="@id/scoreText"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="3dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_120sdp"
            android:background="@drawable/rounded_rectangle_1_grad"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backRect"
            app:layout_constraintBottom_toBottomOf="@id/backRect"
            android:id="@+id/detailsRect">

            <ImageView
                android:id="@+id/point1"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/blue_dot"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/percent_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/point1"
                app:layout_constraintTop_toTopOf="@id/point1"
                app:layout_constraintBottom_toBottomOf="@id/point1"
                android:text="0%"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#2AC4F5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/percent_complete"
                android:layout_marginTop="@dimen/_22sdp"
                app:layout_constraintLeft_toLeftOf="@id/percent_complete"
                android:text="Completion"
                android:textSize="14sp"
                android:alpha="0.75"/>

            <ImageView
                android:id="@+id/point2"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/blue_dot"
                android:layout_marginEnd="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/total_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/point2"
                app:layout_constraintTop_toTopOf="@id/point2"
                app:layout_constraintBottom_toBottomOf="@id/point2"
                android:text="05"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#2AC4F5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/percent_complete"
                android:layout_marginTop="@dimen/_22sdp"
                app:layout_constraintLeft_toLeftOf="@id/total_questions"
                android:text="Questions"
                android:textSize="14sp"
                android:alpha="0.75"/>

            <ImageView
                android:id="@+id/point3"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/green_dot"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_35sdp"/>

            <TextView
                android:id="@+id/correct_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/point3"
                app:layout_constraintTop_toTopOf="@id/point3"
                app:layout_constraintBottom_toBottomOf="@id/point3"
                android:text="00"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#42fc9e"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/correct_questions"
                android:layout_marginTop="@dimen/_22sdp"
                app:layout_constraintLeft_toLeftOf="@id/correct_questions"
                android:text="Correct"
                android:textSize="14sp"
                android:alpha="0.75"/>

            <ImageView
                android:id="@+id/point4"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/red_dot"
                android:layout_marginEnd="@dimen/_70sdp"
                android:layout_marginBottom="@dimen/_35sdp"/>

            <TextView
                android:id="@+id/wrong_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/point4"
                app:layout_constraintTop_toTopOf="@id/point4"
                app:layout_constraintBottom_toBottomOf="@id/point4"
                android:text="00"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#E74C3C"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/wrong_questions"
                android:layout_marginTop="@dimen/_22sdp"
                app:layout_constraintLeft_toLeftOf="@id/wrong_questions"
                android:text="Wrong"
                android:textSize="14sp"
                android:alpha="0.75"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:lottie_rawRes="@raw/home_button"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="@id/detailsRect"
            app:layout_constraintTop_toBottomOf="@id/detailsRect"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="40dp"
            android:onClick="backToDrawer"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/retry_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:lottie_rawRes="@raw/retry_button"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:layout_constraintLeft_toLeftOf="@id/detailsRect"
            app:layout_constraintTop_toBottomOf="@id/detailsRect"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="40dp"
            android:onClick="playAgain"/>

        <Button
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:fontFamily="@font/nunito_semibold"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@id/detailsRect"
            app:layout_constraintTop_toBottomOf="@id/detailsRect"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="30dp"
            android:id="@+id/homeButton"
            android:background="#d3fdff"
            android:onClick="backToDrawer"/>

        <Button
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:fontFamily="@font/nunito_semibold"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/detailsRect"
            app:layout_constraintTop_toBottomOf="@id/detailsRect"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            android:id="@+id/retryButton"
            android:background="#d3fdff"
            android:onClick="playAgain"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>