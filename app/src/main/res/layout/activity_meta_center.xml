<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetaCenter">

    <ScrollView
        android:id="@+id/meta_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Aim:"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meta_aimPara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Theory:"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meta_theoryPara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/meta_theoryPara2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

            <com.example.virtualfluidlab.view.MathJaxWebView
                android:id="@+id/meta_theory_formula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/meta_theoryImg"
                android:layout_width="match_parent"
                android:layout_height="240dp" />

            <TextView
                android:id="@+id/meta_theory_formulaRef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/meta_aboutSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp">

            <TextView
                android:id="@+id/meta_aboutSetupPara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/meta_labelled_diagram"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/metacenter_labelled_diagram" />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/meta_procedure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Laboratory Procedure:"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/meta_procedurePara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="Simulation Procedure:"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/meta_procedurePara2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.85"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/meta_simulation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <Button
            android:id="@+id/meta_addWeightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Weight"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/meta_apparatusNoWeight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:visibility="visible"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_progress="0.5"
            app:lottie_rawRes="@raw/metacenter_anim"
            app:layout_constraintTop_toTopOf="@id/meta_addWeightButton"
            android:layout_marginTop="25dp" />

        <LinearLayout
            android:id="@+id/meta_moveWeightButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meta_apparatusNoWeight"
            android:layout_marginTop="5dp">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_arrow_backward"
                android:onClick="moveWeight"
                android:tag="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move Weight"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_arrow_forward"
                android:layout_marginStart="10dp"
                android:onClick="moveWeight"
                android:tag="1"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/meta_moveWeightButtons"
            app:layout_constraintBottom_toBottomOf="@id/meta_save_button"
            app:layout_constraintVertical_bias="0.3">

            <TableRow>

                <TextView
                    android:text="x (mm)"
                    android:textSize="17sp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textAlignment="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="Fwd. y''(mm)"
                    android:textSize="17sp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textAlignment="center"
                    android:layout_weight="1"/>

                <TextView
                    android:text="Bck. y'' (mm)"
                    android:textSize="17sp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:textAlignment="center"
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/meta_simX"
                    android:text="0"
                    android:textSize="17sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textAlignment="center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/meta_simFwdY"
                    android:text="0"
                    android:textSize="17sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textAlignment="center"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/meta_simBackY"
                    android:text="0"
                    android:textSize="17sp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textAlignment="center"
                    android:layout_weight="1" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/meta_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/nunito_semibold"
            android:tag="0"
            android:text="Delete"
            android:onClick="saveDelData"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/meta_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/nunito_semibold"
            android:tag="1"
            android:text="Save"
            android:onClick="saveDelData"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/vNotch_readingsCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="0 of 10"
            app:layout_constraintBottom_toBottomOf="@id/meta_save_button"
            app:layout_constraintLeft_toRightOf="@id/meta_delete_button"
            app:layout_constraintRight_toLeftOf="@id/meta_save_button"
            app:layout_constraintTop_toTopOf="@id/meta_save_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>